<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_weight="1"
        android:background="@color/cardview_dark_background"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="40pt"
        android:gravity="right|center"
        android:layout_marginBottom="1pt"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/b7"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="7"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"

                ></Button>
            <Button
                android:id="@+id/b8"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="8"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/b9"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="9"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/bDivision"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="/"
                android:layout_marginRight="2pt"
                android:onClick="operatorEvent"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b4"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="4"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/b5"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="5"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/b6"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="6"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/bMultiply"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="*"
                android:layout_marginRight="2pt"
                android:onClick="operatorEvent"
                ></Button>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/b1"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="1"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/b2"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="2"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/b3"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="3"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/bMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="-"
                android:layout_marginRight="2pt"
                android:onClick="operatorEvent"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bPlusMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+/-"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/b0"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="0"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/bDecimal"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="."
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                ></Button>
            <Button
                android:id="@+id/bAddition"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+"
                android:layout_marginRight="2pt"
                android:onClick="operatorEvent"
                ></Button>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bDel"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="DEL"
            android:layout_marginRight="2pt"
            android:onClick="delete"
            ></Button>
        <Button
            android:id="@+id/bClear"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="C"
            android:layout_marginRight="2pt"
            android:onClick="clearEvent"
            ></Button>
        <Button
            android:id="@+id/bEqual"
            android:layout_weight="2"
            android:layout_width="56pt"
            android:layout_height="30pt"
            android:text="="
            android:layout_marginRight="2pt"
            android:onClick="equalOperation"
            ></Button>

    </LinearLayout>


</LinearLayout>